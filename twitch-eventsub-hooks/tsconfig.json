{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "composite": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": { "*": ["node_modules/*", "src/types/*"] },
        "removeComments": true,
        "rootDir": "src",
        "strict": true,
        "target": "es2021",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["**/*.test.ts"]
}
